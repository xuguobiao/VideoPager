<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CoverFlowView">
        <attr name="visibleViews" format="integer" />
        <!--<attr name="reflectionHeight" format="fraction" />-->
        <!--<attr name="reflectionGap" format="dimension" />-->
        <!--<attr name="topImageClickEnable" format="boolean" />-->
        <attr name="coverflowGravity" format="enum">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="center_vertical" value="2" />
        </attr>
        <attr name="coverflowLayoutMode" format="enum">
            <enum name="match_parent" value="0" />
            <enum name="wrap_content" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RoundedImageView">
        <attr name="riv_corner_radius" format="dimension" />
        <attr name="riv_corner_radius_top_left" format="dimension" />
        <attr name="riv_corner_radius_top_right" format="dimension" />
        <attr name="riv_corner_radius_bottom_left" format="dimension" />
        <attr name="riv_corner_radius_bottom_right" format="dimension" />
        <attr name="riv_border_width" format="dimension" />
        <attr name="riv_border_color" format="color" />
        <attr name="riv_mutate_background" format="boolean" />
        <attr name="riv_oval" format="boolean" />
        <attr name="android:scaleType" />
        <attr name="riv_tile_mode">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_x">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_y">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="FixedTabLayout">
        <!-- indicator -->
        <!-- 设置显示器颜色 -->
        <attr name="ftl_indicator_color" format="color" />
        <!-- 设置显示器高度 -->
        <attr name="ftl_indicator_height" format="dimension" />
        <!-- 设置显示器固定宽度 -->
        <attr name="ftl_indicator_width" format="dimension" />
        <!-- 设置显示器margin,当indicator_width大于0,无效 -->
        <attr name="ftl_indicator_margin_left" format="dimension" />
        <attr name="ftl_indicator_margin_top" format="dimension" />
        <attr name="ftl_indicator_margin_right" format="dimension" />
        <attr name="ftl_indicator_margin_bottom" format="dimension" />
        <!-- 设置显示器圆角弧度-->
        <attr name="ftl_indicator_corner_radius" format="dimension" />
        <!-- 设置显示器上方还是下方,只对圆角矩形有用-->
        <attr name="ftl_indicator_gravity" format="enum">
            <enum name="TOP" value="48" />
            <enum name="BOTTOM" value="80" />
        </attr>
        <!-- 设置显示器为常规|三角形|背景色块|-->
        <attr name="ftl_indicator_style" format="enum">
            <enum name="NORMAL" value="0" />
            <enum name="TRIANGLE" value="1" />
            <enum name="BLOCK" value="2" />
        </attr>
        <!-- 设置显示器长度与title一样长,只有在STYLE_NORMAL并且indicatorWidth小于零有效-->
        <attr name="ftl_indicator_width_equal_title" format="boolean" />


        <!-- underline -->
        <!-- 设置下划线颜色 -->
        <attr name="ftl_underline_color" format="color" />
        <!-- 设置下划线高度 -->
        <attr name="ftl_underline_height" format="dimension" />
        <!-- 设置下划线上方还是下方-->
        <attr name="ftl_underline_gravity" format="enum">
            <enum name="TOP" value="48" />
            <enum name="BOTTOM" value="80" />
        </attr>


        <!-- divider -->
        <!-- 设置分割线颜色 -->
        <attr name="ftl_divider_color" format="color" />
        <!-- 设置分割线宽度 -->
        <attr name="ftl_divider_width" format="dimension" />
        <!-- 设置分割线的paddingTop和paddingBottom -->
        <attr name="ftl_divider_padding" format="dimension" />

        <!-- tab -->
        <!-- 设置tab的paddingLeft和paddingRight -->
        <attr name="ftl_tab_padding" format="dimension" />
        <!-- 设置tab大小等分 -->
        <attr name="ftl_tab_space_equal" format="boolean" />
        <!-- 设置tab固定大小 -->
        <attr name="ftl_tab_width" format="dimension" />

        <!-- title -->
        <!-- 设置字体大小 -->
        <attr name="ftl_textsize" format="dimension" />
        <!-- 设置字体选中颜色 -->
        <attr name="ftl_textSelectColor" format="color" />
        <!-- 设置字体未选中颜色 -->
        <attr name="ftl_textUnselectColor" format="color" />
        <!-- 设置字体加粗 -->
        <attr name="ftl_textBold" format="enum">
            <enum name="NONE" value="0" />
            <enum name="SELECT" value="1" />
            <enum name="BOTH" value="2" />
        </attr>
        <!-- 设置字体全大写 -->
        <attr name="ftl_textAllCaps" format="boolean" />

        <!-- 设置显示器支持动画-->
        <attr name="ftl_indicator_anim_enable" format="boolean" />
        <!-- 设置显示器动画时间-->
        <attr name="ftl_indicator_anim_duration" format="integer" />
        <!-- 设置显示器支持动画回弹效果-->
        <attr name="ftl_indicator_bounce_enable" format="boolean" />

        <!-- icon -->
        <!-- 设置icon宽度 -->
        <attr name="ftl_iconWidth" format="dimension" />
        <!-- 设置icon高度 -->
        <attr name="ftl_iconHeight" format="dimension" />
        <!-- 设置icon是否可见 -->
        <attr name="ftl_iconVisible" format="boolean" />
        <!-- 设置icon显示位置,对应Gravity中常量值 -->
        <attr name="ftl_iconGravity" format="enum">
            <enum name="LEFT" value="3" />
            <enum name="TOP" value="48" />
            <enum name="RIGHT" value="5" />
            <enum name="BOTTOM" value="80" />
        </attr>
        <!-- 设置icon与文字间距 -->
        <attr name="ftl_iconMargin" format="dimension" />

    </declare-styleable>

</resources>